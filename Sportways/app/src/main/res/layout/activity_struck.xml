<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".struck">


    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/test1" />

    <TextView
        android:id="@+id/namapembeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Nama   :" />
    <TextView
        android:id="@+id/nohp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namapembeli"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="No HP  :" />
    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nohp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Alamat :" />

    <TextView
        android:id="@+id/strukbelanja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:text="STRUK BELANJA" />

    <TextView
        android:id="@+id/editNama1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:layout_toRightOf="@+id/namapembeli"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:hint="Nama" />

    <TextView
        android:id="@+id/editno2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNama1"
        android:layout_toRightOf="@+id/nohp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:hint="No" />

    <TextView
        android:id="@+id/editalamat3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editno2"
        android:layout_toRightOf="@+id/nohp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:hint="Alamat" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Data Pembeli" />
    <TextView
        android:id="@+id/dataorderan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alamat"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Data Orderan" />
    <TextView
        android:id="@+id/productname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataorderan"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Produk Name :" />

    <TextView
        android:id="@+id/productname4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productname3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Price                :"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/productname5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productname4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="QTY                  :" />
    <TextView
        android:id="@+id/productname6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productname5"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Total Harga    :" />

    <TextView
        android:id="@+id/coba1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataorderan"
        android:layout_toRightOf="@+id/productname3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:hint="Produk Name" />
    <TextView
        android:id="@+id/coba2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coba1"
        android:layout_toRightOf="@+id/productname3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:hint="Price" />
    <TextView
        android:id="@+id/coba3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coba2"
        android:layout_toRightOf="@+id/productname3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:hint="QTY" />
    <TextView
        android:id="@+id/coba4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coba3"
        android:layout_toRightOf="@+id/productname3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:hint="Total harga" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productname6"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Cetak Struk" />


</RelativeLayout>